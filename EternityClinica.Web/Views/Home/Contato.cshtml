@model EternityClinica.Web.Models.ContatoViewModel
@{
    ViewBag.Title = "Contato";
    ViewBag.SelectedMenu = "contato";
    
}

<!-- Start Content Wrapper -->
<div class="content_wrapper">
    <div class="PageTitle">
        <h1>Fale Conosco</h1>
    </div>
    <div id="breadcrumbs">
        <a href="/Home" title="Home">Home</a> &raquo; fale conosco
    </div>
    <!-- Content Area -->
    <div id="content">
        <div class="columns">
            <div class="column" data-place="2">
                <h2>Envie sua mensagem</h2>

                <div class="hr_610"></div>
                <!-- Start Contact Form -->
                <div id="contact">
                    <div id="ajaxsuccess">Enviado com sucesso!!</div>
                    <form name="ajax-form" id="ajax-form" action="#" method="post">
                        <fieldset>
                            <p>
                                <label for="Nome"><span class="required">*</span> Nome</label>
                                <input name="Nome" type="text" id="Nome" size="50" value="" />
                                <span class="error" id="err-name">digite seu nome</span>
                            </p>
                            <p>
                                <label for="Email"><span class="required">*</span> Email</label>
                                <input name="Email" type="email" id="Email" size="50" value="" />
                                <span class="error" id="err-email">digite seu e-mail</span>
                                <span class="error" id="err-emailvld">forma de e-mail não é valido</span>
                            </p>
                            <p>
                                <label for="Telefone"><span class="required">*</span> Telefone</label>
                                <input name="Telefone" type="text" id="Telefone" size="50" value="" />
                                <span class="error" id="err-phone">digite seu telefone</span>
                            </p>
                            <p>
                                <label for="Assunto"><span class="required">*</span> Assunto</label>
                                <select name="Assunto" id="Assunto">
                                    <option value="">Selecione o assunto</option>
                                    <option value="Sugestao">Sugestão</option>
                                    <option value="Reclamacao">Reclamação</option>
                                    <option value="Duvidas">Dúvidas</option>
                                </select>
                                <span class="error" id="err-subject">escolha o assunto</span>
                            </p>
                            <p>
                                <label for="Comentario"><span class="required">*</span> Mensagem</label>
                                <textarea name="Comentario" rows="8" cols="40" id="Comentario" style="width: 450px;"></textarea>
                                <span class="error" id="err-comment">digite sua mensagem</span>
                            </p>

                            <p><input type="button" class="submit" id="send" value="Enviar" /></p>
                            
                        </fieldset>
                    </form>
                    
                    <div class="clear"></div>
                    
                </div>
            </div>
            <div class="column">
                <h2>Localização</h2>
                <div id="map_canvas" style="width:260px; height:300px;"></div>
                <br />
                <h2>Nossas Unidades</h2>
                <p>
                    <input type="button" class="submit" onclick="initialize();" value="Centro" /> 
                    <input type="button" class="submit" onclick="initialize1();" value="Jabaquara" />
                    <input type="button" class="submit" onclick="initialize2();" value="Paulista" />
                </p>
                <div id="Centro">
                    <h2>Unidade Centro</h2>
                    <address id="Centro">
                        Rua Brigadeiro Tobias, 118 Loja 303<br />
                        <strong>Telefone:</strong>   11-2765-2917 / 3313-3992 / 3313-4035<br />                      
                    </address>
                </div>               
                <div id="Jababaquara" style="display: none;">
                    <h2>Unidade Jabaquara</h2>
                    <address>
                        Av.Eng. Armando de Arruda Pereira, 3158-A sala 1<br />
                        <strong>Telefone:</strong>   11-5021-4026<br />
                        <p></p>
                    </address>
                </div>                
                <div id="Paulista" style="display: none;">
                    <h2>Unidade Paulista</h2>
                    <address>
                        Av.Paulista, 2073 sala 609 - Horsa 1 <br />Conjunto Nacional<br />
                        <strong>Telefone:</strong>   11-3171-0702<br />
                        <p></p>
                    </address>
                </div>               
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<!-- End Content Wrapper -->

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script type="text/javascript">
    function initialize() {
        var latlng = new google.maps.LatLng(-23.541959, -46.6357979);
        var myOptions = {
            zoom: 15,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        var map = new google.maps.Map(document.getElementById("map_canvas"),
            myOptions);

        var marker = new google.maps.Marker({
            position: latlng, // variável com as coordenadas Lat e Lng
            map: map,
            title: "Eternity Clinica"
        });

        
        $('#Paulista').fadeOut();
        $("#Jababaquara").fadeOut();
        $('#Centro').fadeIn('slow');
        return false;

    }

    function initialize1() {
        var latlng = new google.maps.LatLng(-23.6531236, -46.6371826);
        var myOptions = {
            zoom: 15,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        var map = new google.maps.Map(document.getElementById("map_canvas"),
            myOptions);

        var marker = new google.maps.Marker({
            position: latlng, // variável com as coordenadas Lat e Lng
            map: map,
            title: "Eternity Clinica"
        });
       
        $('#Centro').fadeOut();
        $('#Paulista').fadeOut();
        $("#Jababaquara").fadeIn(10);
        return false;
    }

    function initialize2() {
        var latlng = new google.maps.LatLng(-23.558778, -46.6595274);
        var myOptions = {
            zoom: 15,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        var map = new google.maps.Map(document.getElementById("map_canvas"),
            myOptions);

        var marker = new google.maps.Marker({
            position: latlng, // variável com as coordenadas Lat e Lng
            map: map,
            title: "Eternity Clinica"
        });

        
        $("#Jababaquara").fadeOut();
        $('#Centro').fadeOut();
        $('#Paulista').fadeIn('slow');
        return false;
    }

    initialize();
</script>



