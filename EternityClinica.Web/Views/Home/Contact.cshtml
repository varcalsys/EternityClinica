@model EternityClinica.Web.Models.ContatoViewModel
@{
    ViewBag.Title = "Contato";
}

<!-- Start Content Wrapper -->
<div class="content_wrapper">
    <div class="PageTitle">
        <h1>Fale Conosco</h1>
    </div>
    <div id="breadcrumbs">
        <a href="/Home" title="Home">Home</a> &raquo; fale conosco
    </div>
    <!-- Content Area -->
    <div id="content">
        <div class="columns">
            <div class="column" data-place="2">
                <h2>Envie sua mensagem</h2>

                <div class="hr_610"></div>
                <!-- Start Contact Form -->
                <div id="contact">
                    <div id="message"></div>
                    <form method="post" action="/Home/Contact">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        <fieldset>
                            <p>
                                <label for="Nome"><span class="required">*</span> Nome</label>
                                <input name="Nome" type="text" id="Nome" size="50" value="" />
                                @Html.ValidationMessageFor(x=>x.Nome)
                            </p>
                            <p>
                                <label for="Email" ><span class="required">*</span> Email</label>
                                <input name="Email" type="email" id="Email" size="50" value="" />
                                @Html.ValidationMessageFor(x => x.Email)
                            </p>
                            <p>
                                <label for="Telefone" ><span class="required">*</span> Telefone</label>
                                <input name="Telefone" type="text" id="Telefone" size="50" value="" />
                                @Html.ValidationMessageFor(x => x.Telefone)
                            </p>
                            <p>
                                <label for="Assunto"><span class="required">*</span> Assunto</label>
                                <select name="Assunto" id="Assunto">
                                    <option value="">Selecione o assunto</option>
                                    <option value="Sugestao">Sugestão</option>
                                    <option value="Reclamacao">Reclamação</option>
                                    <option value="Duvidas">Dúvidas</option>
                                </select>
                                @Html.ValidationMessageFor(x => x.Assunto)
                            </p>
                            <p>
                                <label for="Comentario"><span class="required">*</span> Mensagem</label>
                                <textarea name="Comentario" rows="8" cols="40" id="Comentario" style="width: 450px;"></textarea>
                                @Html.ValidationMessageFor(x => x.Comentario)
                            </p>

                            <p><input type="submit" value="Enviar" /></p>  
                        </fieldset>
                    </form>
                               
                </div>
            </div>
            <div class="column">
                <h2>Localização</h2>
                <div id="map_canvas" style="width:260px; height:300px;"></div>
                <br />
                <h2>Unidade Centro</h2>
                <address>
                    Rua Brigadeiro Tobias, 118 Loja 303<br />
                    <strong>Telefone:</strong>   11-2765-2917 / 3313-3992 / 3313-4035<br />
                    <p><input type="button" class="submit" onclick="initialize();" value="Mapa" /></p>
                </address>

                <h2 style="margin-top: -20px;">Unidade Jabaquara</h2>
                <address>
                    Av.Eng. Armando de Arruda Pereira, 3158-A sala 1<br />
                    <strong>Telefone:</strong>   11-5021-4026<br />
                    <p><input type="button" class="submit" onclick="initialize1();" value="Mapa" /></p>
                </address>

                <h2 style="margin-top: -20px;">Unidade Paulista</h2>
                <address>
                    Av.Paulista, 2073 sala 609 - Horsa 1 <br />Conjunto Nacional<br />
                    <strong>Telefone:</strong>   11-3171-0702<br />
                    <p><input type="button" class="submit" onclick="initialize2();" value="Mapa" /></p>
                </address>
            </div>
            <div class="clear"></div>
        </div>
        <div class="clear"></div>
    </div>
</div>
<!-- End Content Wrapper -->

<script type="text/javascript" src="http://maps.google.com/maps/api/js?sensor=true"></script>
<script src="~/Scripts/jquery.validate.js"></script>
<script type="text/javascript">
    function initialize() {
        var latlng = new google.maps.LatLng(-23.541959, -46.6357979);
        var myOptions = {
            zoom: 15,
            center: latlng,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };

        var map = new google.maps.Map(document.getElementById("map_canvas"),
            myOptions);

        var marker = new google.maps.Marker({
            position: latlng, // variável com as coordenadas Lat e Lng
            map: map,
            title: "Eternity Clinica"
        });

